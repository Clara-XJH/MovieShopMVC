<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top ">
    @Html.ActionLink("Movie Shop", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                @Html.ActionLink("Home", "Index", "Home", null, new {@class = "nav-link"})

            </li>

            <li class="nav-item active">
                @Html.ActionLink("Movies", "Index", "Movies", null, new {@class = "nav-link"})

            </li>
            
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Movies
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @Html.ActionLink("Top Movies", "Genre","Movies", "",  new { @class = "dropdown-item" })
                </div>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Genres
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @{ Html.RenderAction("Index", "Genres"); }
                </div>
            </li>


            <li class="nav-item active">
                @Html.ActionLink("SignIn", "User", "SignIn", null, new {@class = "nav-link"})

            </li>
            <li class="nav-item active">
                @Html.ActionLink("SignUp", "User", "SignUp", null, new {@class = "nav-link"})

            </li>
            <li class="nav-item active">
                @Html.ActionLink("About", "About", "Home", null, new {@class = "nav-link"})

            </li>
            <li class="nav-item active">
                @Html.ActionLink("Contact", "Contact", "Home", null, new {@class = "nav-link"})
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
        </form>

    </div>
</nav>


<div class="container-fluid mt-5 pt-4">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Movie Shop</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>